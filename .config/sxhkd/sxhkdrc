# Basic binds hnei
super + Return
	$TERMINAL
super + d
	dmenu_run
super + r
	$TERMINAL -e $FILE
super + A
	$TERMINAL -e pulsemixer; pkill -RTMIN+10 i3blocks
super + P
        passmenu
super + p
        passmenu --type
super + w
	$BROWSER
super + M
	$TERMINAL -e ncmpcpp
super + S
	$TERMINAL -e open_scratch_notes
alt + semicolon
	dmenupwmanager
alt + space
	rofi -combi-modi window,drun -show combi
super + c
	show_cams
super + equal
        = --

#make sxhkd reload it's config
super + Escape
        pkill -USR1 -x sxhkd

